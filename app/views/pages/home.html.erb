    <div class="card-body">
<form>
    <%= link_to "Sign Up", new_user_registration_path %>
    <%= link_to "Sign In", new_user_session_path %>
</form>
</div>
    <div class="card-footer">
    <div class="d-flex justify-content-center links">
    By Eliza Fury
</div>
</div>
</div>
</div>
</body>
<% end %>
