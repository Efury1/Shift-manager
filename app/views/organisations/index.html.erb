<h1>Organisations List</h1>

<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Hourly rate</th>
      <th>Total Hours</th>
      <th>Shift cost</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.name %></td>
        <td><%= organisation.hourly_rate %></td>
        <td><%= %></td>
        <td><%= %></td>
        <td><%= link_to 'Show', organisation %></td>
        <td><%= link_to 'Join', organisation_join_path(organisation) %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
        <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %> 
  </tbody>
</table>

